<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="2dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="5dp"
        app:cardElevation="5dp"
        android:outlineSpotShadowColor="@color/primary"
        android:outlineAmbientShadowColor="@color/secondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="30dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="10dp"
            android:layout_height="80dp"
            android:layout_marginVertical="50dp"
            app:cardCornerRadius="30dp"
            app:cardBackgroundColor="@color/primary"
            ></androidx.cardview.widget.CardView>

        <RelativeLayout
            android:paddingVertical="20dp"
            android:paddingHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >


            <!-- Image -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/group_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"

                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:maxWidth="50dp"
                android:maxHeight="50dp"
                android:scaleType="fitXY"
                android:src="@drawable/profile"
                app:shapeAppearance="?attr/actionButtonStyle"
                app:shapeAppearanceOverlay="@style/imageViewRounded"
                app:strokeColor="@android:color/white"></com.google.android.material.imageview.ShapeableImageView>

            <!-- End of  Image -->

            <TextView
                android:id="@+id/Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroymedium"
                android:text="Thirdy Gayares"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textSize="25dp"></TextView>


            <TextView
                android:id="@+id/role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Name"
                android:fontFamily="@font/gilroyregular"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:text="Leader"
                android:textSize="12dp"></TextView>





        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>