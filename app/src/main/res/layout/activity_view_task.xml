<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".group.ViewTask">


<!--    header-->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:paddingLeft="10dp"
        android:background="@color/white">
        <!--        Title Name-->
        <TextView
            android:id="@+id/taskName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroybold"
            android:text="Statement of the problem"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>

        <TextView
            android:id="@+id/groupName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/taskName"
            android:fontFamily="@font/gilroymedium"
            android:text="FireTera"
            android:textColor="@color/black"
            android:textSize="18dp"></TextView>


        <TextView
            android:id="@+id/greaterthan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/taskName"
            android:layout_toRightOf="@+id/groupName"
            android:fontFamily="@font/gilroymedium"
            android:paddingHorizontal="5dp"
            android:text=">"
            android:textColor="@color/primary"
            android:textSize="18dp"></TextView>


        <TextView
            android:id="@+id/tableName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/taskName"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/greaterthan"
            android:fontFamily="@font/gilroymedium"

            android:text="Requirements Engineering"
            android:textColor="@color/primary"
            android:textSize="12dp"

            ></TextView>


        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_more_vert_24"></ImageView>

    </RelativeLayout>

<!--    end of header-->


<!--    assigned to row-->
    <androidx.cardview.widget.CardView
        android:id="@+id/assigneeRow"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        app:cardCornerRadius="0dp"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="@color/primary"
                ></RelativeLayout>


            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                >


<!--                button of choosing asignee-->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_asignee"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Thirdy Gayares"
                    android:paddingLeft="50dp"
                    android:stateListAnimator="@null"
                    android:fontFamily="@font/gilroymedium"
                    android:textColor="#887C7C"
                    android:textAllCaps="false"></com.google.android.material.button.MaterialButton>


<!--                Image of assignee-->

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/participant_photo"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignStart="@+id/button_asignee"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:maxWidth="50dp"
                    android:maxHeight="50dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/profile"
                    app:shapeAppearance="?attr/actionButtonStyle"
                    app:shapeAppearanceOverlay="@style/imageViewRounded"
                    app:strokeColor="@android:color/white"></com.google.android.material.imageview.ShapeableImageView>


<!--            assigned to text-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="15dp"
                    android:fontFamily="@font/gilroymedium"
                    android:text="Assigned To"
                    android:textColor="@color/black"></TextView>

<!--               gap-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/participant_photo"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray0"></LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
<!--end of assign row-->


    <!--    start of status row-->
    <androidx.cardview.widget.CardView
        android:id="@+id/statusRow"
        android:layout_marginHorizontal="10dp"
        android:layout_below="@+id/assigneeRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="@color/primary"
                ></RelativeLayout>


            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                >

                <!--                button of choosing status, TODO working. done in progress-->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="10dp"
                    android:backgroundTint="@color/working"
                    android:fontFamily="@font/gilroymedium"
                    android:stateListAnimator="@null"
                    android:text="Working"
                    android:drawableLeft="@drawable/ic_baseline_work_outline_24"
                    android:textAllCaps="false"
                    android:textColor="@color/white"></com.google.android.material.button.MaterialButton>


                <!--            status text-->
                <TextView
                    android:id="@id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="15dp"
                    android:fontFamily="@font/gilroymedium"
                    android:text="Status"
                    android:textColor="@color/black"></TextView>


                <!--                gap-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/status"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray0"
                    android:orientation="horizontal"></LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
<!--    end status row-->





    <!--    start of deadline row-->
    <androidx.cardview.widget.CardView
        android:id="@+id/statusDeadlime"
        android:layout_marginHorizontal="10dp"
        android:layout_below="@+id/statusRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="@color/primary"
                ></RelativeLayout>


            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                >

                <!--          button of choosing status, TODO working. done in progress-->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonDeadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="10dp"
                    android:fontFamily="@font/gilroymedium"
                    android:stateListAnimator="@null"
                    android:text="Oct 10, 10:00am"
                    android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
                    android:textAllCaps="false"
                    android:textColor="#A69D9D"></com.google.android.material.button.MaterialButton>


                <!--            deadline text-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="15dp"
                    android:fontFamily="@font/gilroymedium"
                    android:text="Deadline"
                    android:textColor="@color/black"></TextView>




            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <!--    end deadline row-->

</RelativeLayout>