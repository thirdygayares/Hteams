<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".group.GroupPage">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/avatar1" />

            <TextView
                android:id="@+id/nameofgroup"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/logo"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/gilroymedium"
                android:text="Name of Group"
                android:textAlignment="center"
                android:textSize="16sp" />


            <ImageView
                android:id="@+id/menu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_margin="20dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_baseline_menu_24" />


<!--            dashboard-->

            <LinearLayout
                android:id="@+id/dashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/logo"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                >

<!--                Scroll view in left and right-->

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    >

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/gray0"
                            app:cardCornerRadius="15dp"
                            android:layout_marginHorizontal="5dp"

                            >

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="20dp"
                                android:paddingVertical="10dp">

                                <TextView
                                    android:id="@+id/textAll"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:fontFamily="@font/gilroysemibold"
                                    android:text="ALL"
                                    android:textColor="@color/white"
                                    android:textSize="15dp"></TextView>

                                <TextView
                                    android:id="@+id/all"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/textAll"
                                    android:layout_centerHorizontal="true"
                                    android:text="35"
                                    android:textColor="@color/white"
                                    android:textSize="35dp"></TextView>

                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>



<!--                        TODOTEXT-->


                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/container"
                            app:cardCornerRadius="15dp"
                            android:layout_marginHorizontal="5dp"

                            >

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="20dp"
                                android:paddingVertical="10dp">

                                <TextView
                                    android:id="@+id/textTodo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:fontFamily="@font/gilroysemibold"
                                    android:text="TODO"
                                    android:textColor="@color/todo"
                                    android:textSize="15dp"></TextView>

                                <TextView
                                    android:id="@+id/todo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/textTodo"
                                    android:layout_centerHorizontal="true"
                                    android:text="5"
                                    android:textColor="@color/black"
                                    android:textSize="35dp"></TextView>

                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>


<!--                        INPROGRESS-->


                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/container"
                            app:cardCornerRadius="15dp"
                            android:layout_marginHorizontal="5dp"

                            >

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="20dp"
                                android:paddingVertical="10dp">

                                <TextView
                                    android:id="@+id/textinprogress"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:fontFamily="@font/gilroysemibold"
                                    android:text="WORKING"
                                    android:textColor="@color/working"
                                    android:textSize="15dp"></TextView>

                                <TextView
                                    android:id="@+id/inprogress"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/textinprogress"
                                    android:layout_centerHorizontal="true"
                                    android:text="10"
                                    android:textColor="@color/black"
                                    android:textSize="35dp"></TextView>

                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>



<!--                        Ready-->

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/container"
                            app:cardCornerRadius="15dp"
                            android:layout_marginHorizontal="5dp"

                            >

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="20dp"
                                android:paddingVertical="10dp">

                                <TextView
                                    android:id="@+id/textready"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:fontFamily="@font/gilroysemibold"
                                    android:text="READY"
                                    android:textColor="@color/ready"
                                    android:textSize="15dp"></TextView>
                                <TextView
                                    android:id="@+id/ready"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/textready"
                                    android:layout_centerHorizontal="true"
                                    android:text="10"
                                    android:textColor="@color/black"
                                    android:textSize="35dp"></TextView>
                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>



                        <!--                        Ready-->

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/container"
                            app:cardCornerRadius="15dp"
                            android:layout_marginHorizontal="5dp"

                            >

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="20dp"
                                android:paddingVertical="10dp">
                                <TextView
                                    android:id="@+id/donetext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:fontFamily="@font/gilroysemibold"
                                    android:text="DONE"
                                    android:textColor="@color/done"
                                    android:textSize="15dp"></TextView>
                                <TextView
                                    android:id="@+id/done"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/donetext"
                                    android:layout_centerHorizontal="true"
                                    android:text="10"
                                    android:textColor="@color/black"
                                    android:textSize="35dp"></TextView>
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <!--                        Due Date-->

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/container"
                            app:cardCornerRadius="15dp"
                            android:layout_marginHorizontal="5dp"

                            >

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="20dp"
                                android:paddingVertical="10dp">
                                <TextView
                                    android:id="@+id/duetext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:fontFamily="@font/gilroysemibold"
                                    android:text="DUE"
                                    android:textColor="@color/duedate"
                                    android:textSize="15dp"></TextView>
                                <TextView
                                    android:id="@+id/due"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/duetext"
                                    android:layout_centerHorizontal="true"
                                    android:text="10"
                                    android:textColor="@color/black"
                                    android:textSize="35dp"></TextView>
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>



                    </LinearLayout>

                </HorizontalScrollView>



            </LinearLayout>


        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/addtableanddisplaymode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dashboard"
            android:layout_marginVertical="10dp"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <!--                    icon of dispalay mode-->
                <ImageView
                    android:id="@+id/iconadd"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_baseline_add_24"></ImageView>

                <TextView
                    android:id="@+id/addtable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/iconadd"
                    android:fontFamily="@font/gilroyregular"
                    android:text="Add Table"
                    android:textColor="@color/black"
                    android:textSize="15dp"></TextView>
            </RelativeLayout>




            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

            <!--                    icon of dispalay mode-->
            <ImageView
                android:id="@+id/icondisplay"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/displaylistview"></ImageView>

                <TextView
                    android:id="@+id/display_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/icondisplay"
                    android:fontFamily="@font/gilroyregular"
                    android:text="List View"
                    android:textColor="@color/black"
                    android:textSize="15dp"></TextView>
            </RelativeLayout>


        </LinearLayout>


            <RelativeLayout
                android:id="@+id/firstGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addtableanddisplaymode"
                >

                <RelativeLayout
                    android:id="@+id/firstTable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    >

                    <RelativeLayout
                        android:id="@+id/titlehigh"
                        android:layout_width="10dp"
                        android:layout_height="30dp"
                        android:background="@color/primary"
                        ></RelativeLayout>


                    <TextView
                        android:id="@+id/Table"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/titlehigh"
                        android:fontFamily="@font/gilroybold"
                        android:text="Reseach Design"
                        android:textAlignment="center"
                        android:textColor="@color/primary"
                        android:textSize="16sp" />

                </RelativeLayout>




                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="5dp"
                    android:id="@+id/taskRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/firstTable" />

                <androidx.cardview.widget.CardView
                    android:layout_below="@+id/taskRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                    <RelativeLayout
                        android:id="@+id/blueline"
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:background="@color/primary"
                        ></RelativeLayout>


                    <RelativeLayout
                        android:paddingRight="10dp"
                        android:paddingTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        >

                        <TextView
                            android:id="@id/Addtask"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="+ Add Task"
                            android:layout_marginHorizontal="10dp"
                            android:textColor="@color/primary"></TextView>


                        <!--            gap-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/Addtask"
                            android:layout_marginTop="17dp"
                            android:background="@color/gray0"></LinearLayout>
                    </RelativeLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/secondGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/firstGroup"
                android:layout_margin="2dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/Table1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/gilroybold"
                    android:text="User Case"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/primary"
                    android:textSize="16sp" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/taskRecycler2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Table1" />

                <TextView
                    android:id="@+id/Addtask2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/taskRecycler2"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/gilroyregular"
                    android:text="+ADD TASK"
                    android:textAlignment="center"
                    android:textColor="@color/primary"
                    android:textSize="16sp" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/secondGroup"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="+Add Group"
                android:textColor="@color/primary"
                android:textSize="20dp"></TextView>

        </RelativeLayout>
    </LinearLayout>
    </ScrollView>


</RelativeLayout>