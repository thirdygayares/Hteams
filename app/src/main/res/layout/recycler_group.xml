<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:layout_marginHorizontal="2dp"
         app:cardElevation="1dp"
        android:outlineSpotShadowColor="@color/primary"
        android:outlineAmbientShadowColor="@color/secondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="2dp"
        >
        <RelativeLayout
            android:paddingVertical="20dp"
            android:paddingHorizontal="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            >


            <!-- Image of notification-->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/group_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"

                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:maxWidth="50dp"
                android:maxHeight="50dp"
                android:scaleType="fitXY"
                android:src="@drawable/profile"
                app:shapeAppearance="?attr/actionButtonStyle"
                app:shapeAppearanceOverlay="@style/imageViewRounded"
                app:strokeColor="@android:color/white"></com.google.android.material.imageview.ShapeableImageView>

            <TextView
                android:id="@+id/groupName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/group_image"
                android:fontFamily="@font/gilroymedium"

                android:text="Firetera"
                android:textColor="@color/black"
                android:textSize="30dp"></TextView>


            <TextView
                android:id="@+id/group_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/groupName"
                android:layout_toRightOf="@+id/group_image"
                android:fontFamily="@font/gilroyregular"
            android:paddingRight="10dp"
                android:text="This is Short Description"
                android:textSize="12dp"></TextView>



            <RelativeLayout
                android:layout_toRightOf="@id/group_image"
                android:layout_below="@+id/group_description"
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/group_description"

                >


                <ImageView
                    android:id="@+id/teacher_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_teacher"

                    ></ImageView>


                <TextView
                    android:id="@+id/teacher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@+id/teacher_icon"
                    android:fontFamily="@font/gilroyregular"
                    android:paddingHorizontal="10dp"
                    android:text="Prof Novem Lanaban"
                    android:textSize="13dp"></TextView>

                <ImageView
                    android:id="@+id/subject_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_toRightOf="@+id/teacher"
                    android:src="@drawable/ic_subject"
                    ></ImageView>


                <TextView
                    android:id="@+id/subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@+id/subject_icon"
                    android:fontFamily="@font/gilroyregular"
                    android:paddingHorizontal="10dp"
                    android:text="Elective 1"
                    android:textSize="13dp"></TextView>



            </RelativeLayout>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>