<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey3"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Image of notification-->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/participant_photo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:maxWidth="50dp"
        android:maxHeight="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/profile"
        app:shapeAppearance="?attr/actionButtonStyle"
        app:shapeAppearanceOverlay="@style/imageViewRounded"
        app:strokeColor="@android:color/white"></com.google.android.material.imageview.ShapeableImageView>

    <!-- end of Image notification-->


<!--    Start of description and date-->
    <LinearLayout
        android:layout_toRightOf="@+id/participant_photo"
        android:layout_alignTop="@id/participant_photo"
        android:layout_width="wrap_content"
        android:layout_marginRight="50dp"

        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/notification_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroymedium"
            android:text="Thirdy Gayares wa s invited you to Join Firetera"
            android:textColor="@color/black"
            android:textSize="17dp"></TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oct 19 2022"
            android:fontFamily="@font/gilroyregular"
            android:textSize="12dp"
            ></TextView>
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:text="10:00 PM"
                android:fontFamily="@font/gilroyregular"
                android:textSize="12dp"
                ></TextView>


        </LinearLayout>

    </LinearLayout>

    <!--    Start of description and date-->

<!--horizontal Menu-->
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_baseline_more_horiz_24"></ImageView>


</RelativeLayout>