<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".group.Updates">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="25dp"
        android:textSize="15sp"
        android:text="Comment to"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/gilroymedium"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:fontFamily="@font/gilroybold"
        android:text="Task Title"
        android:layout_marginLeft="10dp"
        android:textSize="25sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/comment_updatebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_toStartOf="@id/comment_cancelbtn"

        android:backgroundTint="@color/primary"
        android:fontFamily="@font/gilroymedium"
        android:text="Update"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/comment_cancelbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/gilroymedium"
        android:text="Cancel"
        android:textSize="15sp" />



<!--start here-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_below="@id/comment_updatebtn"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/cmntfield"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="@font/gilroyregular"
            android:hint="With your comments and suggestions we can work more efficient"
            android:padding="10dp"
            android:textSize="16sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/list_indicate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#E0F1F4"
            android:layout_marginHorizontal="6dp"
            android:padding="10dp"
            android:layout_marginVertical="5dp"
            app:cardCornerRadius="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="List"
                android:paddingVertical="5dp"
                android:paddingHorizontal="14dp"
                android:textColor="@color/working"/>
        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/display_updates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>




        <androidx.cardview.widget.CardView
            android:id="@+id/link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:backgroundTint="#E0F1F4"
            android:padding="10dp"
            android:layout_marginVertical="5dp"
            app:cardCornerRadius="10dp"
            >

            <TextView
                android:id="@+id/linktext"
                android:textColor="@color/working"
                android:paddingVertical="5dp"
                android:paddingHorizontal="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Link"
                ></TextView>

        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/displayrecyleview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />

    </LinearLayout>

