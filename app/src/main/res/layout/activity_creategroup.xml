<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white1"
    tools:context=".group.Creategroup">

    <ImageButton
        android:id="@+id/back_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/white1"
        android:src="@drawable/arrowpointingleft" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/gilroymedium"
        android:text="Create Group"
        android:textAlignment="center"
        android:textSize="16sp" />

    <!-- Image of groupPage-->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/choose_avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="20dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:maxWidth="50dp"
        android:maxHeight="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/groupavatar4"
        app:shapeAppearance="?attr/actionButtonStyle"
        app:shapeAppearanceOverlay="@style/imageViewRounded"
        app:strokeColor="@android:color/white"></com.google.android.material.imageview.ShapeableImageView>


    <TextView
        android:id="@+id/upload_pic"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_below="@+id/choose_avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/gilroymedium"
        android:text="Choose Group Avatar"
        android:textAlignment="center" />


    <LinearLayout
        android:id="@+id/info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upload_pic"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:paddingHorizontal="10dp">

        <TextView
            android:id="@+id/name_text"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:fontFamily="@font/gilroysemibold"
            android:text="Name"
            android:textColor="@color/primary"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/input_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="@font/gilroymedium"
            android:hint="Enter Your Group Name"
            android:padding="13dp"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/gilroysemibold"
            android:text="Description"
            android:textAlignment="center"
            android:textColor="@color/primary"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/input_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:fontFamily="@font/gilroymedium"
            android:hint="Brief description about your group "
            android:padding="13dp"
            android:textSize="18sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/gilroysemibold"
            android:text="Subject"
            android:textAlignment="center"
            android:textColor="@color/primary"
            android:textSize="12sp" />

        <com.google.android.material.button.MaterialButton

            android:layout_marginTop="5dp"
            android:id="@+id/subject_generate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroymedium"
            android:padding="13dp"
            android:stateListAnimator="@null"
            android:text="Select Subject"
            android:textSize="18sp"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="#A69D9D"></com.google.android.material.button.MaterialButton>


<!--        this is hide when the user click it will show-->
        <LinearLayout
            android:id="@+id/prof_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical"
            >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/gilroysemibold"
            android:text="Professor"
            android:textAlignment="center"
            android:textColor="@color/primary"
            android:textSize="12sp" />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/input_professor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="@font/gilroymedium"
            android:padding="13dp"
            android:text="thirdy gayares"
            android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/nextbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/primary"
        android:fontFamily="@font/gilroybold"
        android:paddingHorizontal="10dp"
        android:paddingVertical="2dp"
        android:text="NEXT"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <LinearLayout

        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:src="@drawable/firstpro" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroymedium"
                android:text="Details"
                android:textAlignment="center"
                android:textSize="15sp" />

        </LinearLayout>


        <ImageView
            android:layout_width="65dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/arrowforward" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:src="@drawable/secondpro" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroymedium"
                android:text="Participants"
                android:textAlignment="center"
                android:textSize="15sp" />

        </LinearLayout>
    </LinearLayout>








</RelativeLayout>