<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".creategroup">

<ImageButton
    android:id ="@+id/back_option"
    android:src ="@drawable/arrowpointingleft"
    android:layout_width="60dp"
    android:layout_height="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="10dp"
    android:backgroundTint="@color/white"
/>

    <TextView
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:text="Create Group"
        android:textSize="16sp"
        android:textAlignment="center"
        android:fontFamily="@font/gilroymedium"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:src = "@drawable/dogpic"
        android:id="@+id/user_pic"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp" />

    <TextView
        android:id = "@+id/upload_pic"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="190dp"
        android:text="Upload"
        android:textAlignment="center"
        android:fontFamily="@font/gilroymedium"
        />

    <TextView
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="30dp"
        android:text="Name"

        android:textSize="15sp"
        android:textColor="@color/black"
        android:fontFamily="@font/gilroysemibold"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="270dp"
        android:hint="Enter Your Group Name"
        android:textSize ="15sp"
        android:fontFamily="@font/gilroymedium"
         />

    <TextView
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="30dp"
        android:text="Subject"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:fontFamily="@font/gilroysemibold"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="340dp"
        android:hint="Select Course or subject"
        android:textSize ="15sp"
        android:fontFamily="@font/gilroymedium"
        />

    <TextView
        android:layout_width="65dp"
        android:layout_height="20dp"
        android:layout_marginTop="390dp"
        android:layout_marginLeft="30dp"
        android:text="Professor"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:fontFamily="@font/gilroysemibold"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="410dp"
        android:hint="Enter Professor Name"
        android:textSize ="15sp"
        android:fontFamily="@font/gilroymedium"
        />

    <TextView
        android:layout_width="79dp"
        android:layout_height="20dp"
        android:layout_marginTop="459dp"
        android:layout_marginLeft="30dp"
        android:text="Description"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:fontFamily="@font/gilroysemibold"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="483dp"
        android:hint="Write a brief description "
        android:textSize ="15sp"
        android:fontFamily="@font/gilroymedium"
        />


    <Button
        android:id = "@+id/nextbtn"
        android:layout_width="170dp"
        android:backgroundTint="@color/teamsprim"
        android:layout_height="55dp"
        android:layout_marginTop="537dp"
        android:layout_centerHorizontal="true"
        android:text="NEXT"
        android:textSize="20sp"
        android:fontFamily= "@font/gilroyheavy"/>

    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="595dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_gravity="center"
            android:src = "@drawable/firstpro"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:src ="@drawable/arrowforward"
            android:layout_width="65dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:layout_gravity="center"
            android:src = "@drawable/secondpro"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp" />
      </LinearLayout>

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Details"
        android:textAlignment="center"
        android:fontFamily="@font/gilroymedium"
        android:textSize="15sp"
        android:layout_marginTop="650dp"
        android:layout_marginLeft="90dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Participants"
        android:textAlignment="center"
        android:fontFamily="@font/gilroymedium"
        android:textSize="15sp"
        android:layout_marginTop="650dp"
        android:layout_marginLeft="230dp"/>







</RelativeLayout>